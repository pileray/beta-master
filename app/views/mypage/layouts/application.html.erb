<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title>BetaMaster</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', type: 'module' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="max-w-5xl mx-auto p-3">

      <%= render 'mypage/shared/tab_menu' %>

      <div class="bg-base-100 border-base-300 rounded-box p-6">
        <%= yield %>
      </div>

    </div>
    <%= render 'shared/require_login_modal' %>
    <%= render 'shared/require_bookmark_modal' %>
    <%= render 'shared/toasts' %>
  </body>
</html>
