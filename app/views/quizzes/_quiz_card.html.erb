<div class="w-full max-w-3xl mx-auto p-4 bg-background rounded-lg shadow-md"
      data-controller="random-exam"
      data-random-exam-answer-value="<%= quiz.answer %>"
      data-random-exam-body-value="<%= quiz.body %>"
      data-random-exam-initial-body-value="<%= quiz.decorate.truncated_body %>">
  <div class="flex items-center justify-between mb-4">
    <div class="flex gap-2">
      <%= render 'quizzes/category', category: quiz.category %>
    </div>
    <%= render 'quizzes/bookmarks/bookmark_buttons', quiz: %>
  </div>
  <div class="bg-muted rounded-md p-4 mb-4">
    <p class="p-5 rounded-md text-lg font-medium bg-base-200"
        style="height: 200px; overflow-y: auto;"
        data-random-exam-target="body">
    </p>
    <div class="flex justify-end items-center mt-2">
      <button class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-sm btn-primary mr-2"
              data-action="random-exam#addCharacters">
        5文字追加
      </button>
      <button class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-sm btn-outline btn-primary"
              data-action="random-exam#showBody">
        全文表示
      </button>
    </div>
  </div>
  <div class="bg-muted rounded-md p-4 mb-4" data-action="click->random-exam#showAnswer">
    <p id="show-answer" class="p-5 rounded-md text-lg font-medium bg-base-200 text-center text-blue-400"
        data-random-exam-target="answer">回答表示</p>
  </div>
  <div class="flex justify-between"></div>
</div>
