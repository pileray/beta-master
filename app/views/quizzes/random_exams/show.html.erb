<% set_meta_tags title: 'ランダム出題' %>
<%= turbo_frame_tag 'quiz_card' do %>
  <%= render 'quizzes/quiz_card', quiz: @quiz %>
  <div class="w-full max-w-3xl mx-auto px-4 mt-3">
    <div class="flex justify-between items-center space-x-2">
      <%= link_to '終了', quizzes_random_exam_path, data: { turbo_method: :delete, turbo_frame: '_top' },
                                                  class: 'inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-outline flex-1' %>
      <%= link_to '次の問題', quiz_random_exam_path(@next_quiz), data: { turbo_action: :advance },
                                                             class: 'inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-primary flex-1' %>
    </div>
  </div>
<% end %>
