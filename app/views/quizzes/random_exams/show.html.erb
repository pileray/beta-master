<div class="w-full max-w-3xl mx-auto p-4 bg-background rounded-lg shadow-md">
  <div class="flex items-center justify-between mb-4">
    <div class="flex gap-2">
      <%= render 'quizzes/category', category: @quiz.category %>
    </div>
    <%= render 'quizzes/bookmarks/bookmark_buttons', quiz: @quiz %>
  </div>
  <div class="bg-muted rounded-md p-4 mb-4">
    <p class="p-5 rounded-md text-lg font-medium bg-base-200">
      <%= @quiz.body %>
    </p>
    <div class="flex justify-end items-center mt-2">
      <button class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-sm btn-primary mr-2">
        5文字追加
      </button>
      <button class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-sm btn-outline btn-primary">
        全文表示
      </button>
    </div>
  </div>
  <div class="bg-muted rounded-md p-4 mb-4">
    <p class="p-5 rounded-md text-lg font-medium bg-base-200 text-center"><%= @quiz.answer %></p>
  </div>
  <div class="flex justify-between"></div>
</div>
<div class="w-full max-w-3xl mx-auto px-4 mt-3">
  <div class="flex justify-between items-center space-x-2">
    <a class="inline-flex items-center justify-center whitespace-nowrap font-medium btn btn-outline flex-1">
      終了
    </a>
    <a class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn btn-primary flex-1">
      次の問題
    </a>
  </div>
</div>
