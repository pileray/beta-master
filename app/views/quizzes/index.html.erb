<div class="max-w-5xl mx-auto p-3">
  <div class="mt-3 p-3">
    <%= render 'search_form' %>
  </div>
  <div class="flex justify-center flex-wrap">
    <%= link_to quizzes_path do %>
      <div class="badge text-xs w-20 whitespace-nowrap overflow-hidden text-ellipsis">
        全て
      </div>
    <% end %>
    <%= render partial: 'category', collection: Category.all %>
  </div>
  <%= turbo_frame_tag 'quizzes-list', data: { turbo_action: :advance } do %>
    <table class="table sm:table-sm table-xs p-3 mt-6">
      <thead>
        <tr>
          <th>問題</th>
          <th>正解</th>
          <th><%= sort_link(@q, :category_name, "ジャンル") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @quizzes %>
      </tbody>
    </table>
  <% end %>
</div>